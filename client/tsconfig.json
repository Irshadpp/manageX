{
  "compilerOptions": {
    "jsx": "react-jsx", // Ensures JSX is handled correctly in React projects
    "target": "ESNext", // Optional, choose your preferred target
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"], // Adjust the path as necessary
    "types": ["node", "react"],
    // "include": ["src/**/*"]
  }
}